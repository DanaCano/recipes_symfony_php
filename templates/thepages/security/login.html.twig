{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4 px-4 pt-5 my-5 text-center fw-bold display-4">Connexion</h1>
        <div class="col-6 mx-auto">
            <p class="lead mb-4 text-center">Bienvenue à notre communauté</p>
            <p class="lead mb-4 text-center text-dark fw-bold">Faites bon usage de ce super pouvoir et ne
                passez pas du côté obscur comme Dark Vador, que la force soit avec vous!
            </p>
            <div class="overflow-hidden" style="max-height: 30vh;">
                <div class="container px-4">
                    <img src="assets/images/logo/envracbleulogo.png" class="rounded mx-auto d-block" alt="image logo de la association" width="200" height="200" loading="lazy">
                </div>
            </div>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}

        <form action="{{ path('security.login') }}" method="post">

            {% if error %}
                <div class="alert alert-danger mt-4">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <div class="form-group">
                <label for="username" class="form-label mt-4">Email</label>
                <input type="email" class="form-control" id="username" name="_username"
                       placeholder="monappli@gmail.fr" value="{{ last_username }}">
            </div>

            <div class="form-group">
                <label for="password" class="form-label mt-4">Mot de passe</label>
                <input type="password" class="form-control" id="password" name="_password" placeholder="*****">
            </div>

            <button type="submit" class="btn btn-primary mt-4">Connexion</button>

            <div>
                <a class="btn" href="">Mot de passe oublié ?</a>
            </div>

        </form>
            <br>
            <br>

        </div>
    </div>
    <br>
    <br>
{% endblock %}
