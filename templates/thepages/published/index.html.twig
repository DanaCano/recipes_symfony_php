{% extends 'base.html.twig' %}

{% block title %}Nos Recettes{% endblock %}

{% block body %}

    <div class="container mt-4 text-center">
        <h1>Recettes de la communauté</h1>
        <br>
        <video muted="muted" autoplay="" loop="" style="max-width: 100%; height: 100%">
            <source src="assets/video/videorecette.mp4" type="video/mp4" />
        </video>
        <p class="fw-bold">Pour voir toutes les recettes publiées et pour noter pour l'une d'entre elles, nous vous invitons à rejoindre notre communauté</p>
        <a class="btn btn-primary btn-sm mb-2" href="{{ path('recipe.index.public') }}" role="button">Voir plus</a>
        <hr class="my-4">
    </div>

    <div class="container mt-4 text-center">
        <div class="recipes">
            <h2 class="mt-4">Voici les recettes gagnantes du mois dernier</h2>
            <br>
            <div class="d-flex justify-content-center flex-wrap gap-3">
                {% for recipe in recipes %}
                    <div class="card text-bg-light mb-3 col-3" style="width: 18rem;">
                        <div class="card-header">{{ recipe.name }}</div>
                        <div class="card-body">
                            <h5 class="card-title">Difficulté {{ recipe.difficulty }} sur 5</h5>
                            <p class="card-text">{{ recipe.description|slice(0,100)~'...' }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <br>
    </div>
{% endblock %}
