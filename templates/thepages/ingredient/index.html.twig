{% extends 'base.html.twig' %}

{% block title %}Ingredients{% endblock %}

{% block body %}
    <div class="container mt-4">
        {% if not ingredients.items is same as ([]) %}
            <h1>Mes ingrédients anti-gaspi</h1>

            <a href="{{ path('ingredient.new') }}" class="btn btn-primary">Créer l'ingrédient</a>

            {# Message d'alert succes pour ajourter un ingredient dans le formulaire #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success mt-4">
                    {{ message }}
                </div>
            {% endfor %}

            <div class="count mt-4">
                <p>Vous avez {{ ingredients.getTotalItemCount }} ingrédients au total</p>
            </div>

            <table class="table table-hover mt-4">
                <thead>
                <tr>
                    <th scope="col">Numéro</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Date de création</th>
                    <th scope="col">Edition</th>
                    <th scope="col">Suppresion</th>
                </tr>
                </thead>
                <tbody>
                {% for ingredient in ingredients %}
                    <tr class="table-info">
                        <th scope="row">{{ ingredient.id }}</th>
                        <td>{{ ingredient.name }}</td>
                        <td>{{ ingredient.price }}</td>
                        <td>{{ ingredient.createdAt|date('d/m/Y')}}</td>
                        <td>
                            <a href="{{ path('ingredient.edit', { id: ingredient.id }) }}" class="btn btn-info">Modifier
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('ingredient.delete', { id: ingredient.id }) }}" class="btn btn-warning">Supprimer
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {# display navigation #}
            <div class="navigation d-flex justify-content-center">
                {{ knp_pagination_render(ingredients) }}
            </div>
        {% else %}
            <p> Il n'y a pas d'ingrédients pour le moment </p>
                <a href="{{ path('ingredient.new') }}" class="btn btn-primary">
            Créer un ingrédient
                </a>

            {% endif %}
    </div>
    <br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
{% endblock %}
